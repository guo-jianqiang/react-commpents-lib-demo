{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "types": ["node", "jest"],
    "typeRoots": ["./typings", "./node_modules/@types"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "src/**/*.stories.tsx", "src/__tests__", "src/setupEnzyme.ts"]
}